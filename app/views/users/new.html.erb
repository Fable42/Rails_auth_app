<div class="container"> 
  <%= form_with model: @user do |form| %>
    <div class="tittle-lg center-h">
      <div class="cl-w">Tag</div>
      <div class="cl-g">IT</div>  
    </div>

    <p><%= form.text_field :name, placeholder: 'Name', class: 'input_sign tittle-sm mt-lg ' %></p>

    <p><%= form.text_field :email, placeholder: 'Email', class: 'input_sign tittle-sm mt-sm '%></p>

    <p><%= form.text_field :tag, placeholder: 'Tag', class: 'input_sign tittle-sm mt-sm ' %></p>

    <p><%= form.password_field :password, placeholder: 'Password', class: 'input_sign tittle-sm mt-sm ' %></p>

    <p><%= form.password_field :password_confirmation, placeholder: 'Repeat password', class: 'input_sign tittle-sm mt-sm ' %></p>

    <p><%= form.submit "Sign Up", class: 'button_sign mt-lg tittle-m' %></p>

    <p class="center-h mt-ssm mb-ssm">
      <span class="line-125 line-l"></span><span class="mv-a text-m cl-g">or</span><span class="line-125 line-r"></span>
    </p>

    <%= link_to 'Sign in', new_session_path, class: 'cl-w text-m center-h' %>
  <% end %>
</div>
